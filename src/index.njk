---
layout: "layouts/base"
title: "Home"
cssFiles: ["/assets/css/home.css"]
projectsCards: []
---
<article class="card home__page">
    <header class="home_hero">
        <p class="home_hero_hello">Hello,</p>
        <div class="home_hero_description">
            <p class="home_hero_person">
                I am Elaine.
                <br/>
                Developer &amp; Designer.
            </p>
            <p>I am passionate about creating immersive and interactive experiences.</p>
        </div>
    </header>
    <section class="home__section">
        <h1 class="text-center">Skills</h1>
        <div class="flex-group gap-s">
            {% for skill in skills %}
            <div class="card bg-primary">
                <h2 class="card-title">{{skill.name}}</h2>
                <ul class="card-content tag-group">
                    {% for tag in skill.skillList %}
                    <li class="tag">{{tag}}</li>
                    {% endfor %}  
                </ul>
            </div>
            {% endfor %}
        </div>
    </section>
    <section class="home__section">
        <h1 class="text-center padding-top-xl">Projects</h1>
        <div class="flex-group gap-s">
            {% set selectedIds = [0, 1, 2] %}
            {% for project in projects %}
            {% if project.id in selectedIds  %}
            <div class="card bg-primary flex-grow-1">
                <h2 class="card-title">{{project.title}}</h2>
                <div class="card-content">
                    <img class="fit" src={{project.image}} alt="Project thumbnail"/>
                    <ul class="tag-group">
                        {% for tool in project.tools %}
                        <li class="tag dark">{{tool}}</li>
                        {% endfor %}
                        {% for language in project.programmingLanguages %}
                        <li class="tag dark">{{language}}</li>
                        {% endfor %}
                    </ul>
                    <div class="flex-group gap-xs padding-top-s justify-content-center">
                        {% if project.content  %}
                        <a class="button secondary button-s" href="/projects/{{project.id}}">More</a>
                        {% endif %}
                        {% if project.live %}
                        <a class="button secondary button-s" href="{{project.live}}">Live</a>
                        {% endif %}
                        {% if project.linkCode %}
                        <a class="button secondary button-s" href="{{project.linkCode}}">Code</a>
                        {% endif %}
                    </div>
                </div>  
            </div>
            {% endif %}
            {% endfor %}
        </div>
        <div class="padding-top-xl">
            <a class="button button-l margin-auto" href="#">See All Projects</a>
        </div>
    </section>
</article>
