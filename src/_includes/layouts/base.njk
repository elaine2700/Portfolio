    <!--CSS-->
    <link rel="stylesheet" href="/assets/css/layout.css"/>
    <link rel="stylesheet" href="/assets/css/global.css"/>
    <link rel="stylesheet" href="/assets/css/footer.css"/>
    {% for css in cssFiles %}
        <link rel="stylesheet" href={{css}} />
    {% endfor %}
</head>
<body>
    <div class="side-menu-container">
        <header class="main-menu">
            <div class="profile-card">
                <div class="profile-picture-container">
                    <img class="head" src="/assets/images/Head.svg"/>
                    <img class="lens" src="/assets/images/Lens.svg"/>
                    <div class="flex-group justify-content-right">
                        <div>
                            <input id="toggle"
                            type="checkbox"
                            checked/>
                            <label class="switch" for="toggle"></label>
                        </div>
                    </div>
                </div>
                <div>
                    <p class="profile-card-name">Elaine Serrano</p>
                    <p>XR Developer & Designer</p>
                </div>
            </div>
            <nav class="main-nav">
                <ul class="nav-group">
                    <li><a class="nav-item" href="/">Home</a></li>
                    <li><a class="nav-item" href="/projects">Projects</a></li>
                    <li><a class="nav-item" href="/resume">Resume</a></li>
                </ul>
            </nav>
        </header>
        <footer id="contact" class='footer'>   
            <ul class="social-media">
                <li><a href="https://www.linkedin.com/in/elaine-serrano-echeverria/">Github</a></li>
                <li><a href="https://github.com/elaine2700">LInkedIn</a></li>
            </ul>
            <ul class="page-info">
                <li>&copy;2024 Elaine Serrano</li>
                <li>Contact me at <span class="bold"><a href="mailto:contact@elaineserrano.com">contact@elaineserrano.com</a></span></li>
                <li>Last Updated on October, 2023</li>
                <li>Designed & coded from Scratch</li>
            </ul>
        </footer>
    </div>
    
    <main class="content-wrapper">
        {{content | safe}}
    </main>

    {% for js in jsFiles %}
    <script src={{js}}></script>
    {% endfor %}
</body>
</html>